# Production Environment Configuration

# Database Configuration
DB_HOST=your_production_db_host
DB_PORT=5432
DB_NAME=jabbr_trading_bot_prod
DB_USER=your_production_db_user
DB_PASSWORD=your_secure_production_password
DB_SSL=true

# Production-optimized database pool settings
DB_POOL_MIN=5
DB_POOL_MAX=50
DB_POOL_IDLE_TIMEOUT=120000
DB_POOL_CONNECTION_TIMEOUT=60000

# Application Settings
NODE_ENV=production
PORT=3000
API_VERSION=v1

# JWT Configuration
JWT_SECRET=your_ultra_secure_jwt_secret_production_key_256_chars_min
JWT_EXPIRES_IN=1h

# Redis Configuration (Production cluster)
REDIS_HOST=your_redis_cluster_endpoint
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_CLUSTER_MODE=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/jabbr/app.log
LOG_MAX_SIZE=100m
LOG_MAX_FILES=10
LOG_JSON_FORMAT=true

# Trading Bot Configuration
DEFAULT_STRATEGY=sma
DEFAULT_SYMBOL=BTCUSDT
DEFAULT_TIMEFRAME=1h

# Exchange API Configuration (Production - Live trading)
BYBIT_API_KEY=your_bybit_production_api_key
BYBIT_SECRET=your_bybit_production_secret
BYBIT_TESTNET=false

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1
METRICS_COLLECTION_INTERVAL=30000
APM_SERVICE_NAME=jabbr-trading-bot
APM_ENVIRONMENT=production

# Production Security
CORS_ORIGIN=https://yourdomain.com,https://app.yourdomain.com
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12
ENABLE_HELMET=true
ENABLE_COMPRESSION=true

# WebSocket Configuration
WS_PORT=3001
WS_PATH=/ws
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# File Upload Configuration
UPLOAD_MAX_FILE_SIZE=5242880
UPLOAD_ALLOWED_TYPES=text/csv
UPLOAD_VIRUS_SCAN=true

# Cache Configuration
CACHE_TTL=600
CACHE_MAX_KEYS=10000
ENABLE_QUERY_CACHE=true
CACHE_COMPRESSION=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_PATH=/health

# Scaling Configuration
CLUSTER_MODE=true
WORKER_PROCESSES=auto
GRACEFUL_SHUTDOWN_TIMEOUT=30000

# Backup Configuration
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL=21600000
BACKUP_RETENTION_DAYS=30

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/your_cert.pem
SSL_KEY_PATH=/etc/ssl/private/your_key.pem
FORCE_HTTPS=true

# External Services
EMAIL_SERVICE_API_KEY=your_email_service_api_key
SMS_SERVICE_API_KEY=your_sms_service_api_key
NOTIFICATION_WEBHOOK_URL=your_notification_webhook_url

# Feature Flags
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_MACHINE_LEARNING=true
ENABLE_RISK_MANAGEMENT=true
ENABLE_PORTFOLIO_OPTIMIZATION=true

# Production Features (Disabled for security)
ENABLE_MOCK_DATA=false
ENABLE_TEST_ROUTES=false
SKIP_AUTH_FOR_TESTING=false
ENABLE_DEBUG_ROUTES=false
ENABLE_SWAGGER_UI=false
