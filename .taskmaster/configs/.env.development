# Environment Configuration Template

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jabbr_trading_bot_dev
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# Development-optimized database pool settings
DB_POOL_MIN=1
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=60000
DB_POOL_CONNECTION_TIMEOUT=30000

# Application Settings
NODE_ENV=development
PORT=3000
API_VERSION=v1

# JWT Configuration
JWT_SECRET=your_jwt_secret_development_key_here
JWT_EXPIRES_IN=24h

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Trading Bot Configuration
DEFAULT_STRATEGY=sma
DEFAULT_SYMBOL=BTCUSDT
DEFAULT_TIMEFRAME=1h

# Exchange API Configuration (Development - Use testnet)
BYBIT_API_KEY=your_bybit_testnet_api_key
BYBIT_SECRET=your_bybit_testnet_secret
BYBIT_TESTNET=true

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=1.0
METRICS_COLLECTION_INTERVAL=60000

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_ROUTES=true
ENABLE_SWAGGER_UI=true

# Security Settings (Relaxed for development)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=1000
BCRYPT_ROUNDS=10

# WebSocket Configuration
WS_PORT=3001
WS_PATH=/ws
WS_HEARTBEAT_INTERVAL=30000

# File Upload Configuration
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,text/csv

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_KEYS=1000
ENABLE_QUERY_CACHE=true

# Development Features
ENABLE_MOCK_DATA=true
ENABLE_TEST_ROUTES=true
SKIP_AUTH_FOR_TESTING=false
