{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "prefer-const": "error",
    "no-var": "error",
    "no-useless-escape": "off",
    "no-undef": "off"
  },
  "env": {
    "node": true,
    "es6": true
  },
  "globals": {
    "NodeJS": "readonly"
  },
  "ignorePatterns": ["dist/", "node_modules/", "*.js"]
} 